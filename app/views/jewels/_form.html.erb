<section id="jewel">
  <div class="container">
      <h3> Nova Jóia</h3>
      <div class="divider"></div>
      <br>

      <div class="row">
        <div class="col s12">
          <%= form_for @jewel, :html => {:multipart => true} do |f| %>


          <div class="row">
            <div class="col s5">
               <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Selecione uma categoria...") %>
               <label for="">Categoria</label>
            </div>
          </div>

          <div class="row">
            <div class="file-field input-field gallery_picture col s5 ">
              <div class="waves-effect waves-light btn red lighten-2">
                <span>Foto</span>
                <%= f.file_field :jewel_img %>
              </div>
              <div class="file-path-wrapper">
                 <input class="file-path validate" type="text">
              </div>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s5">
              <i class="material-icons prefix">star</i>
              <label for="">Nome da Jóia</label>
              <%= f.text_field :title%>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s10">
              <i class="material-icons prefix">description</i>
              <label for="">Descrição</label>
              <%= f.text_area :description, class: "materialize-textarea"%>
            </div>
          </div>

          <div class="form-actions">
            <div class="waves-effect waves-light btn red lighten-2">
              <i class="material-icons right">send</i>
              <%= f.submit "Salvar" %>
            </div>
          </div>

          <% end %>
        </div>
      </div>

  </div>
</section>


<script>

  $(document).ready(function() {
   $('select').material_select();
  });

  $(document).ready(function() {
    $('input#input_text, textarea#textarea1').characterCounter();
  });
</script>
