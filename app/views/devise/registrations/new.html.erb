<div class="row">

	<div class="col s4">
	</div>

<div class="col s5">

	<div class="signup-form">

    <h2>Cadastro</h2>

    </br></br>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="row">
				<div class="row">
					<div class="input-field col s8">
						<%= f.input :email, required: true, autofocus: true %>
					</div>
				</div>

				<div class="row">
					<div class="input-field col s8">
						<%= f.input :password, label: "Senha", required: true, hint: ("#{@minimum_password_length} caracteres" if @minimum_password_length) %>
					</div>
				</div>

				<div class="row">
					<div class="input-field col s8">
							<%= f.input :password_confirmation, label: "Confirmar Senha", required: true %>
					</div>
				</div>



      </div>

			<button class="btn waves-effect waves-light" type="submit">Confirmar
				<i class="material-icons right">send</i>
			</button>
			<br>

			<!--
      <div class="form-actions">
        <%= f.button :submit, "Confirmar", class: "btn-custom2" %>
      </div>
		-->
    <% end %>

    <%= render "devise/shared/links" %>

  </div>

</div>
</div>
