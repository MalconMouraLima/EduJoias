<div class="col-md-6 col-md-offset-3">

	<div class="signup-form">

    <h2>Cadastro</h2>

    </br></br>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true %>
        <%= f.input :password, label: "Senha", required: true, hint: ("#{@minimum_password_length} caracteres" if @minimum_password_length) %>
        <%= f.input :password_confirmation, label: "Confirmar Senha", required: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Confirmar", class: "btn-custom2" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>

</div>
